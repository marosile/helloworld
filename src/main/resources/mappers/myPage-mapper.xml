   <!-- 비밀번호 조회 -->
   <select id="selectEncPw" parameterType="_int" resultType="string">
		SELECT MEMBER_PW FROM MEMBER WHERE MEMBER_ID = #{memberId}
   </select>
   
   <!-- 비밀번호 변경 -->
   <update id="changePw" parameterType="Member">
   		UPDATE MEMBER SET
		MEMBER_PW = #{memberPw}
		WHERE MEMBER_ID = #{memberId}
   </update>
   
   
   
   <!-- 회원탈퇴 -->
   <update id="secession">
   		UPDATE MEMBER SET
   		DELETED_FL = 'Y'
   		WHERE MEMBER_ID = #{memberId}
   </update>
   
	


