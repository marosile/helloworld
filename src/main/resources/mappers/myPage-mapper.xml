<mapper namespace="myPageMapper">

	<!-- 프사, 닉네임 수정 -->
	<update id="updateProfile" parameterType="Member">
		UPDATE MEMBER SET
		PROFILE_IMG = #{profileImg},
		MEMBER_NICK = #{memberNick}
		WHERE MEMBER_ID = #{memberId}
	</update>
	
	
	
